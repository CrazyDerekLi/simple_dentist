/* pages/my/youhui/youhui.wxss */
.find_tabs{
  height:100rpx;
  position:relative;
  border-top:1rpx solid #f2f2f2;
  border-bottom:1rpx solid #f2f2f2;
}
.find_tab{
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size:28rpx;
  color:#b3b3b3;
  float:left;
}
.find_tab.select_tab{
  color:#808080;
}
.find_view_box{
  border-top:1rpx solid #f2f2f2;
}
.find_view_item{
  height:120rpx;
  line-height: 120rpx;
  font-size:28rpx;
  position:relative;
  border-bottom: 1rpx solid #f2f2f2;
  padding:0 100rpx 0 120rpx;
  color:#999;
}
.find_view_item_left{
  position:absolute;
  left:60rpx;
  width:40rpx;
  height:40rpx;
  top:38rpx;
}
.find_view_item_left image{
  width:40rpx;
  height:40rpx;
  display: block;
}
.find_view_item_right{
  position:absolute;
  right:30rpx;
  width:140rpx;
  height:60rpx;
  line-height: 60rpx;
  background: #59bdf9;
  color:#fff;
  top:30rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size:26rpx;
}
.find_view_item_right image{
  width:30rpx;
  height:30rpx;
  display: block;
}
.youhui_top{
  padding:100rpx 0 120rpx 0;
  background:#f0f5f8;
}
.youhui_top_tishi{
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size:40rpx;
  font-weight: bold;
  color:#808080;
}
.youhui_top_info{
  height:40rpx;
  line-height: 40rpx;
  font-size:26rpx;
  text-align: center;
  color:#808080;
}
.youhui_top_close{
  position:absolute;
  top:20rpx;
  right:20rpx;
  width:40rpx;
  height:40rpx;
}
.youhui_top_close image{
  width:100%;
  height:100%;
  display: block;
}
.no_data_box{
  padding:100rpx 0 0 0;
}
.no_data_info{
  text-align: center;
  line-height: 40rpx;
  font-size:28rpx;
  color:#808080;
}
.no_data_btn{
  height:100rpx;
  width:300rpx;
  background: #59bdf9;
  color:#fff;
  font-size:32rpx;
  text-align: center;
  margin:100rpx auto 0 auto;
  line-height: 100rpx;
  border-radius: 20rpx;
}