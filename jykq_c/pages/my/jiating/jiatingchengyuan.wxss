/* pages/my/jiating/jiatingchengyuan.wxss */
.container{
  padding-bottom:100rpx;
}
.jiating_top{
  height:340rpx;
  padding:50rpx 0 30rpx 0;
  border-bottom:1rpx solid #f2f2f2;
  position: relative;
}
.jiating_top_box{
  position:relative;
}
.jiating_top_photo{
  width:240rpx;
  height:240rpx;
  margin:0 auto;
  position: relative;
}
.jiating_top_photo image{
  display: block;
  width:100%;
  height:100%;
}
.jiating_top_title{
  margin-top:10rpx;
  line-height: 60rpx;
  text-align: center;
  font-size:30rpx;
  color:#808080;
}
.jiating_top_info{
  line-height: 30rpx;
  font-size:22rpx;
  text-align: center;
  color:#b3b3b3;
}
.jiating_box{
  border-top:1rpx solid #f2f2f2;
}
.jiating_box_title{
  height:90rpx;
  line-height: 90rpx;
  text-align: center;
  border-bottom:1rpx solid #f2f2f2;
  font-size:26rpx;
  color:#b3b3b3;
  position:relative;
}
.jiating_item{
  position:relative;
  height:120rpx;
  border-bottom:1rpx solid #f2f2f2;
  padding-left:140rpx;
}
.jiating_item_left{
  position:absolute;
  left:40rpx;
  top:20rpx;
  width:80rpx;
  height:80rpx;
}
.jiating_item_left image{
  display: block;
  width:100%;
  height:100%;
}
.jiating_item_enter{
  position:absolute;
  right:30rpx;
  top:45rpx;
  width:30rpx;
  height:30rpx;
}
.jiating_item_enter image{
  display: block;
  width:100%;
  height:100%;
}
.jiating_item_center{
  line-height: 120rpx;
  font-size:30rpx;
  color:#808080;
}
.jiating_wxts{
  padding:60rpx 0 0 0;
  text-align: center;
}
.jiating_wxts_title{
  line-height: 100rpx;
  font-size:36rpx;
  color:#808080;
}
.jiating_wxts_info{
  line-height: 30rpx;
  font-size:24rpx;
  color:#b3b3b3;
}
.jiating_bottom_btn{
  position:fixed;
  left:0;
  right:0;
  bottom:0;
  height:100rpx;
  line-height: 100rpx;
  background: #59bdf9;
  color:#fff;
  font-size:30rpx;
  text-align: center;
}