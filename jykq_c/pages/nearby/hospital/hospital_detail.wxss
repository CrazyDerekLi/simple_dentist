/* pages/nearby/hospital/hospital_detail.wxss */
.container{
  margin-bottom:100rpx;
}
.lunbo{
    height:350rpx;
    overflow:hidden;
    background:#ccc;
}
.lunbo swiper{
    height:350rpx;
}
.slide_image{
  position:relative;
  display: block;
  height:350rpx;
  width:840rpx;
}
.pingfen_box{
  border-top:1rpx solid #f2f2f2;
  border-bottom:1rpx solid #f2f2f2;
}
.pingfen_title{
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  border-bottom:1rpx solid #f2f2f2;
  font-size:30rpx;
  color:#808080;
}
.pingfen_body{
  position:relative;
}
.pingfen_body_left{
  position:relative;
  width:50%;
  border-right:1rpx solid #f2f2f2;
}
.pingfen_body_right{
  position:absolute;
  width:220rpx;
  right:0;
  top:50%;
  left:75%;
  height:60rpx;
  margin-top:-30rpx;
  margin-left:-110rpx;
}
.pingfen_body_left_box{
  position: relative;
  padding:30rpx 40rpx;
}
.pingfen_item{
  height:40rpx;
  position:relative;
}
.pingfen_item_name{
  height:40rpx;
  width:50%;
  position:relative;
  float:left;
  font-size:24rpx;
  color:#999;
}
.pingfen_item_stars{
  height:30rpx;
  width:50%;
  float:left; 
}
.pingfen_item_stars image{
  width:25rpx;
  height:25rpx;
  display: block;
  margin:0 2rpx;
  padding:0;
  position:relative;
  float:left;
}
.pingfen_logo{
  position:absolute;
  left:0;
  right:0;
  height:50rpx;
  width:50rpx;
  top:5rpx;
}
.pingfen_logo image{
  display: block;
  margin:0;
  padding:0;
  width:100%;
  height:100%;
}
.pingfen_body_right_title{
  height:60rpx;
  margin-left:60rpx;
  line-height: 60rpx;
  font-size:32rpx;
  text-align: center;
  color:#808080;
}
.hospital_item{
  border-bottom:1rpx solid #f2f2f2;
  position: relative;
}
.hospital_item_title{
  height:100rpx;
  position: relative;
  border-bottom: 1rpx solid #f2f2f2;
}
.hospital_item_title_name{
  background: #fff;
  height:98rpx;
  line-height: 98rpx;
  width:140rpx;
  font-size:28rpx;
  margin:auto;
  color:#808080;
  z-index: 100;
  text-align: center;
  position: relative;
}
.line{
  width:250rpx;
  height:1rpx;
  background: #b3b3b3;
  position:absolute;
  left:50%;
  top:50%;
  margin-left:-125rpx;
  z-index: 99;
}
.hospital_item_body{
  position:relative;
  margin:20rpx;
}
.hospital_item_doctor_photo{
  position:relative;
  height:100rpx;
  width:100rpx;
  margin:20rpx;
  border-radius: 100rpx;
  background: #ccc;
  display: inline-block;
}

.hospital_bottom_btns{
  height:100rpx;
  position:fixed;
  bottom:0;
  left:0;
  right:0;
}
.hospital_bottom_left_btn{
  height:100rpx;
  line-height: 100rpx;
  width:50%;
  float:left;
  font-size:30rpx;
  color:#808080;
  background: #fff;
  text-align: center;
}
.hospital_bottom_right_btn{
  height:100rpx;
  line-height: 100rpx;
  width:50%;
  float:left;
  font-size:30rpx;
  color:#fff;
  background: #59bdf9;
  text-align: center;
  border-left:1rpx solid #f2f2f2;
  margin-left:-1rpx;
}