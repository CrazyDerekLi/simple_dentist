.container{
  background: #f5f5f9;
}
.cart_list{
  border-top:1rpx solid #f2f2f2;
  background: #fff;
  margin-top:20rpx;
}
.cart_item{
  padding:20rpx 20rpx 20rpx 240rpx;
  height:160rpx;
  position:relative;
  border-bottom:1rpx solid #f2f2f2;
}
.checkbox{
  position:absolute;
  left:20rpx;
  top:50%;
  height:40rpx;
  width:40rpx;
  margin-top:-20rpx;
}
.checkbox image{
  width:40rpx;
  height:40rpx;
}
.good_photo{
  position:absolute;
  left:80rpx;
  top:30rpx;
  width:140rpx;
  height:140rpx;
  background:#cccccc;
}
.choose_count_left_btn,.choose_count_right_btn{
  width:60rpx;
  height:60rpx;
  position:absolute;
  top:0;
}
.choose_count_left_btn{
  left:0;
  border-right:1rpx solid #f2f2f2;
}
.choose_count_right_btn{
  right:0;
  border-left:1rpx solid #f2f2f2;
}
.choose_count_left_btn image,.choose_count_right_btn image{
  width:40rpx;
  height:40rpx;
  position:absolute;
  left:10rpx;
  top:10rpx;
}
.choose_count{
  position:relative;
  height:100rpx;
  background: #fff;
}
.choose_count_btns{
  height:60rpx;
  width:220rpx;
  text-align:center;
  position:absolute;
  right:40rpx;
  top:0;
  line-height:60rpx;
  border:1rpx solid #f2f2f2;
  background:#fff;
  font-size:32rpx;
  color:#000;
  float:right;
}
.good_count_box{
  position:absolute;
  bottom:30rpx;
  right:0;
  height:60rpx;
}
.good_delete{
  font-size:28rpx;
  color:#f38996;
  position:absolute;
  right:40rpx;
  top:30rpx;
  line-height:60rpx;
}
.good_title{
  font-size:32rpx;
  color:#7e7b7f;
  height:60rpx;
  line-height:60rpx;
}
.good_type{
  font-size:28rpx;
  color:#ccc;
  line-height:40rpx;
  height:40rpx;
}
.good_amount{
  font-size:32rpx;
  color:#f38996;
  height:60rpx;
  line-height: 60rpx;
}
.cart_tip{
  height:120rpx;
  line-height:120rpx;
  font-size:26rpx;
  color:#b3b3b3;
  padding-left:30rpx;
  position:relative;
}
.cart_tip image{
  display: inline-block;
  width:30rpx;
  height:30rpx;
  margin-bottom:-5rpx;
}
.cart_btns{
  position:fixed;
  bottom:0;
  left:0;
  right:0;
  background:#fff;
  height:100rpx;
  border-top:1rpx solid #f2f2f2;
}
.cart_left_btn{
  height:100rpx;
  line-height:100rpx;
  float:left;
  width:20%;
  font-size:32rpx;
  position:relative;
  text-align: center;
  color:#666;
}
.cart_left_btn image{
  display:inline-block;
  width:40rpx;
  height:40rpx;
  margin-right:2rpx;
  margin-bottom:-10rpx;
}
.cart_center_btn{
  height:100rpx;
  line-height:100rpx;
  width:45%;
  font-size:32rpx;
  color:#f38996;
  text-align: center;
  float:left;
}
.cart_right_btn{
  float:left;
  height:100rpx;
  width:35%;
  line-height: 100rpx;
  border-left:1rpx solid #f2f2f2;
  margin-left:-1rpx;
  font-size:32rpx;
  color:#fff;
  background:#f38996;
  text-align: center;
}