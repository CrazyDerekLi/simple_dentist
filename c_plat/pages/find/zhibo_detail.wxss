.user_box{
  height:140rpx;
  padding:0 40rpx;
  background: #f6f5fa;
  position:relative;
}


.zhibo_doctor_name{
  font-size:32rpx;
  font-weight:bold;
  height:60rpx;
  line-height:60rpx;
  padding-top:10rpx;
  color:#808080;
}
.zhibo_doctor_name_info{
  float:left;
  font-size:36rpx;
  font-weight:bold;
  height:60rpx;
  line-height:60rpx;
  padding-top:10rpx;
  color:#808080;
}
.zhibo_doctor_info{
  clear:both;
  height:50rpx;
  font-size:28rpx;
  color:#7d7b80;
  line-height:50rpx;
}
.star{
  color:#ccc;
  position:relative;
  line-height:50rpx;
  float:left;
  margin-top:25rpx;
  margin-left:10rpx;
}
.star>image{
  float:left;
  margin-top:5rpx;
  margin-right:5rpx;
  width:30rpx;
  height:30rpx;
}
.btn_add_family_doctor{
  position:absolute;
  right:40rpx;
  height:60rpx;
  background:#77daa1;
  color:#fff;
  padding: 0 30rpx 0 60rpx;
  border-radius: 60rpx;
  top:50%;
  margin-top:-30rpx;
  line-height: 60rpx;
  font-size:30rpx;
}
.btn_heng{
  height:6rpx;
  width:30rpx;
  position:absolute;
  left:40rpx;
  top:30rpx;
  margin-left:-15rpx;
  margin-top:-3rpx;
  background: #fff;
}
.btn_shu{
  height:30rpx;
  width:6rpx;
  position:absolute;
  left:40rpx;
  top:30rpx;
  margin-left:-3rpx;
  margin-top:-15rpx;
  background: #fff;
}
.zhibo_info{
  background: #808080;
  position:absolute;
  top:140rpx;
  bottom:420rpx;
  left:0;
  right:0;
  z-index:110;
}
.zhibo_zaixian{
  font-size:30rpx;
  line-height:40rpx;
  color:#fff;
  position:absolute;
  top:10rpx;
  left:20rpx;
}
.zhibo_message{
  position:absolute;
  height:100rpx;
  bottom:260rpx;
  left:0;
  right:0;
  background:#fff;
  z-index:100;
  overflow-y:auto;
  padding:30rpx;
}
.zhibo_goods_list{
  position:absolute;
  height:140rpx;
  padding:20rpx;
  bottom:80rpx;
  left:0;
  right:0;
  background:#f6f5fa;
  overflow-x: auto;
}
.zhibo_goods_list_box{
  position:relative;
  height:140rpx;
  width:1000rpx;
}
.zhibo_system_tip{
  position:absolute;
  bottom:0;
  height:80rpx;
  line-height:60rpx;
  left:0;
  right:0;
  text-align: center;
  font-size:28rpx;
  color:#fff;
  background:#74bee3;
}
.zhibo_good_item{
  display: inline-block;
  width:140rpx;
  height:140rpx;
  background:#fff;
  position:relative;
  margin-right:20rpx;
}
.zhibo_good_amount{
  position:absolute;
  bottom:0;
  left:0;
  width:120rpx;
  height:40rpx;
  line-height:40rpx;
  font-size:28rpx;
  background:#808080;
  color:#fff;
  text-align: center;
}
.btn_zhibo_shoucang{
  position:absolute;
  width:60rpx;
  height:60rpx;
  bottom:-30rpx;
  right:120rpx;
  background:#f28a95;
  border-radius:60rpx;
}
.btn_zhibo_message{
  position:absolute;
  width:60rpx;
  height:60rpx;
  bottom:-30rpx;
  right:30rpx;
  background:#77daa1;
  border-radius:60rpx;
}
.btn_zhibo_shoucang image,.btn_zhibo_message image{
  width:60rpx;
  height:60rpx;
}
.zhibo_message_item{
  position:relative;
  
}
.zhibo_message_item_user{
  position:absolute;
  left:0;
  width:90rpx;
  line-height:36rpx;
  font-size:24rpx;
  color:#0072bb;
  text-align: right;
  padding-right:10rpx;
}
.zhibo_message_item_info{
  padding-left:100rpx;
  line-height:36rpx;
  font-size:24rpx;
  color:#7f7a80;
}