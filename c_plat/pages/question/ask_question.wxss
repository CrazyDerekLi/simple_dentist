.container{
  background:#f8f8f8;
  padding-bottom:100rpx;
}
.question_list{
}
.question_head{
  height:80rpx;
  border-top:1rpx solid #f2f2f2;
  border-bottom:1rpx solid #f2f2f2;
  line-height: 80rpx;
  background:#fff;
  margin-top:20rpx;
}
.question_left{
  height:80rpx;
  line-height: 80rpx;
  float:left;
  padding-left:40rpx;
  text-align: left;
  font-size:28rpx;
  color:#ccc;
}
.question_right{
  height:80rpx;
  line-height: 80rpx;
  float:right;
  padding-right:40rpx;
  text-align: right;
  font-size:28rpx;
  color:#ccc;
}
.question_body{
  padding:20rpx 40rpx;
  background: #fff;
  line-height: 60rpx;
  border-bottom:1rpx solid #f2f2f2;
}
.question_select_item{
  height:60rpx;
  line-height:60rpx;
  padding-left:60rpx;
  position:relative;
  font-size:28rpx;
  color:#7e7b7f;
}
.question_select_item image{
  width:40rpx;
  height:40rpx;
  position:absolute;
  top:10rpx;
  left:0;
}
.question_textarea{
  margin:20rpx 30rpx;
  border-radius: 10rpx;
  background:#fff;
  height:200rpx;
  position:relative;
}
textarea{
  font-size:28rpx;
  padding:20rpx;
  line-height:40rpx;
  border:none;
  position:absolute;
  left:20rpx;
  right:20rpx;
  top:0;
  bottom:0;
  height:auto;
  width:auto;
  display: block;
}
.question_btns{
  position:fixed;
  bottom:0;
  border-top:1rpx solid #f2f2f2;
  left:0;
  right:0;
  height:100rpx;
  background: #fff;
  z-index: 1000;
}
.question_left_btn,.question_right_btn{
  width:50%;
  float:left;
  line-height:100rpx;
  text-align: center;
  font-size:32rpx;
  color:#666;
}
.question_right_btn{
  border-left:1rpx solid #f2f2f2;
  margin-left:-1rpx;
  background:#76daa1;
  color:#fff;
}
.user_picker{
  position:fixed;
  background: #f8f8f8;
  bottom:0;
  border-top:1rpx solid #f2f2f2;
  z-index: 100;
  width:100%;
  height:240px;
}
.user_picker_container{
  background:#f8f8f8;
  width: 100%; 
  height: auto;
  position:absolute;
  top:0;
  bottom:0;
}
.user_picker_item{
  line-height: 60px;
  color:#666;
  text-align: left;
  padding-left:150rpx;
  font-size:32rpx;
  position:relative;
  z-index: 100;
}
.user_picker_photo{
  width:80rpx;
  height:80rpx;
  position:absolute;
  left:40rpx;
  top:20rpx;
  border-radius: 80rpx;
}
.user_picker_name{
  line-height: 40rpx;
  margin-top:20rpx;
  font-size:28rpx;
  color:#9fa1a0;
}
.user_picker_status{
  line-height: 40rpx;
  font-size:26rpx;
  color:#ccc;
}
.user_picker_photo image{
  width:80rpx;
  height:80rpx;
}
.btn_cancel{
  width:100%;
  line-height:100rpx;
  height:100rpx;
  position:absolute;
  bottom:0;
  background:#77daa1;
  color:#fff;
  z-index:1000;
  text-align: center;
}