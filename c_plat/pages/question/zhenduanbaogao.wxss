.container{
  background: #f8f8f8;
  padding-bottom:100rpx;
}
.baogao_top{
  height:240rpx;
  border-top:1rpx solid #9ed2ea;
  background: #74bee3;
  position:relative;
  padding:40rpx 40rpx 40rpx 300rpx;
}
.baogao_top image{
  position:absolute;
  width:180rpx;
  height:180rpx;
  left:80rpx;
  top:60rpx;
}
.baogao_top_title1{
  color:#fff;
  font-size:32rpx;
  float:left;
  line-height: 260rpx;
}
.baogao_top_title2{
  color:#fff;
  font-size:60rpx;
  font-weight: bold;
  line-height: 60rpx;
  padding-left:0rpx;
  position:absolute;
  left:450rpx;
  top:130rpx;
}
.baogao_item{
  margin-bottom:20rpx;
  border-top:1rpx solid #f2f2f2;
  background:#fff;
  border-bottom:1rpx solid #f2f2f2;
}
.baogao_head{
  height:90rpx;
  line-height: 90rpx;
  padding-left:40rpx;
  border-bottom:1rpx solid #f2f2f2;
  font-size:28rpx;
  color:#b5b5b6;
}
.baogao_body{
  padding:20rpx 20rpx 20rpx 40rpx;
  line-height:50rpx;
  font-size:28rpx;
  color:#7f7c80;
}
.baogao_btn{
  text-align: center;
  position:fixed;
  left:0;
  bottom:0;
  right:0;
  line-height: 100rpx;
  height:100rpx;
  border-top:1rpx solid #f2f2f2;
  background:#76daa1;
  color:#fff;
  font-size:32rpx;
}