.container{
  background:#f8f8f8;
}
.question_item{
  border-bottom:1rpx solid #f2f2f2;
  background: #fff;
  position:relative;
  line-height: 100rpx;
  min-height: 100rpx;
}
.question_item.user_info{
  padding:40rpx;
  padding-left:190rpx;
}
.question_item .user_photo{
  width:120rpx;
  height:120rpx;
  position:absolute;
  left:50rpx;
  top:30rpx;
}
.question_item .user_photo image{
  width:120rpx;
  height:120rpx;
}
.user_name{
  line-height:50rpx;
  font-size:40rpx;
  font-weight: bold;
  color:#7e7b7f;
}
.user_wx{
  line-height:50rpx;
  font-size:30rpx;
  color:#7e7b7f;
}
.question_item_left{
  float:left;
  line-height: 100rpx;
  font-size:30rpx;
  padding-left:40rpx;
  color:#7e7b7f;
  height:100rpx;
}
.question_item_center{
  position:relative;
  line-height:100rpx;
  float:left;
  font-size:30rpx;
  text-align: center;
  padding-left:40rpx;
  color:#7e7b7f;
  height:100rpx;
}
.gender_item image{
  display: inline-block;
  width:40rpx;
  height:40rpx;
  margin-bottom:-10rpx;
}
.question_item_right{
  float:right;
  font-size:30rpx;
  padding-right:40rpx;
  color:#ccc;
  height:100rpx;
}
.gender_item{
  float:left;
  position:relative;
  padding:0 10rpx;
  height:100rpx;
  line-height:100rpx;
}
.question_textarea{
  font-size:30rpx;
  padding:0 40rpx;
  height:260rpx;
}
.question_textarea_head{
  line-height: 90rpx;
  height: 90rpx;
  font-size:30rpx;
  color:#9fa0a0;
}
.question_textarea_body{
  position:relative;
  width:auto;
  height:100rpx;
}
.question_textarea_body textarea{
  height:300rpx;
  background:#fff;
  border:1rpx solid #f2f2f2;
  border-radius:10rpx;
  padding:20rpx;
  position:absolute;
  left:0;
  top:0;
  right:0;
  width:auto;
  color:#999;
}
.show_info{
  position:absolute;
  top:820rpx;
  bottom:100rpx;
  left:0;
  right:0;
}
.question_bottom_btn{
  background:#76daa1;
  color:#fff;
  font-size:32rpx;
  text-align: center;
  line-height: 100rpx;
  height:100rpx;
  border-top:1rpx solid #f2f2f2;
  position:fixed;
  bottom:0;
  left:0;
  right:0;
}
.show_info_body{
  height:100rpx;
  line-height:100rpx;
  text-align:center;
  position:absolute;
  left:0;
  right:0;
  top:50%;
  margin-top:-50rpx;
  font-size:28rpx;
  color:#b3b3b3;
}
.show_info_body image{
  display: inline-block;
  width:30rpx;
  height:30rpx;
  position:relative;
  margin-bottom:-4rpx;
}