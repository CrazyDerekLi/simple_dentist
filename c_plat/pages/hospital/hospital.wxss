.container{
  background:#f5f5f5;
  padding-bottom:110rpx;
}
.lunbo{
    height:350rpx;
    overflow:hidden;
    border-bottom:1rpx solid #f2f2f2;
    background:#fff;
}
.lunbo swiper{
    height:350rpx;
}
.slide_image{
  position:relative;
  display: block;
  height:350rpx;
  width:840rpx;
}
.accordion_box{
  position:relative;
  border-top:1rpx solid #f2f2f2;
  border-bottom:1rpx solid #f2f2f2; 
  margin-top:10rpx;
}
.accordion_head{
  position:relative;
  height:80rpx;
  background:#fff;
  color:#9fa0a0;
  font-size:32rpx;
  line-height:80rpx;
  padding-left:40rpx;
  text-align:center;
  border-bottom:1rpx solid #f2f2f2;
}
.accordion_head image{
  position:absolute;
  right:40rpx;
  top:34rpx;
  width:20rpx;
  height:12rpx;
}
.selected .accordion_head{
  background:#fff;
  color:#9fa0a0;
}
.accordion_body{
  display:block;
  font-size:26rpx;
  padding:20rpx 40rpx;
  background:#fff;
  line-height:60rpx;
  color:#9fa0a0;
}
.zjtd_list{
  position:relative;
}
.zjtd_item{
  position:relative;
  width:33.33%;
  display:inline-block;
  height:60rpx;
  padding-top:140rpx;
  line-height:50rpx;
  text-align: center;
  color:#999;
  font-size:30rpx;
}
.zjtd_item image{
  position:absolute;
  width:120rpx;
  height:120rpx;
  top:20rpx;
  left:50%;
  margin-left:-60rpx;
  border-radius: 120rpx;
  background:#ccc;
}

.ryzz_img_list{
  padding:10rpx 30rpx;
}
.ryzz_img_list .ryzz_img{
  display: inline-block;
  width:50%;
  position:relative;
}
.ryzz_img_list .ryzz_img image{
  width:210rpx;
  height:280rpx;
  display: block;
  margin:0 auto;
}
.ryzz_info_list{
  padding:20rpx 30rpx;
}
.ryzz_info_item{
  position:relative;
  height:50rpx;
  line-height:50rpx;
  padding-left:50rpx;
  font-size:28rpx;
  color:#999;
}
.ryzz_info_item image{
  width:40rpx;
  height:40rpx;
  position:absolute;
  left:5rpx;
  top:5rpx;
}
.hospital_btns{
  height:100rpx;
  border-top:1rpx solid #f2f2f2;
  position:fixed;
  bottom:0;
  left:0;
  right:0;
}
.hospital_btns>view{
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  float:left;
  text-align:center;
  background:#76daa1;
  font-size:32rpx;
  color:#fff;
}
