view{
  font-family:'Microsoft YaHei';
}
.lunbo{
    height:460rpx;
    overflow:hidden;
}
.lunbo swiper{
    height:460rpx;
}
.cir_bg{
  width: 120rpx; 
  height: 120rpx; 
  border-radius:120rpx;
  background:#000;
  opacity: 0.1;
  transform:rotateX(70deg);
  position:absolute;
  bottom:-40rpx;
  left:50%;
  margin-left:-60rpx;
  z-index:1;
}
.status_box{
  position:relative;
  width:200rpx;
  height:220rpx;
  margin:0 auto;
  padding-top:40rpx;
}
.status_box image{
  position:relative;
  width:200rpx;
  height:200rpx;
  z-index:100;
}
.healthy_title{
  padding-top:20rpx;
  text-align: center;
  color:#fff;
  font-size:24rpx;
  height:30rpx;
  line-height:30rpx;
}
.healthy_count_box{
  height:120rpx;
  width:617rpx;
  margin:0 auto;
  margin-top:-20rpx;
  position:relative;
}
.healthy_count_box image{
  height:120rpx;
  width:617rpx;
  position:relative;
  z-index:100;
}
.healthy_count_red_bg{
  position:absolute;
  height:28rpx;
  border-top-right-radius: 28rpx;
  border-bottom-right-radius: 28rpx;
  background:#f28a94;
  right:124rpx;
  top:47rpx;
  z-index:0;
  width:372rpx;
}
.healthy_btn_red_bg{
  position:absolute;
  height:110rpx;
  width:110rpx;
  border-radius: 110rpx;
  background:#f28a94;
  right:5rpx;
  top:5rpx;
  z-index:0;
}
.healthy_btn_search{
  position:absolute;
  left:0;
  top:0;
  width:120rpx;
  height:120rpx;
  z-index:101;
}
.healthy_btn_add{
  position:absolute;
  right:0;
  top:0;
  width:120rpx;
  height:120rpx;
  z-index:101;
}
.healthy_tip{
  color:#fff;
  font-size:24rpx;
  text-align: center;
  margin-top:-10rpx;
}
.container{
  background:#f7f7f7;
}
.panel-tab{
  background:#fff;
}
.view-item{
  padding-left:20rpx;
}
.view-item .btn_shoucang{
  position:absolute;
  left:0;
  top:0;
  width:80rpx;
  height:80rpx;
}
.view-item .btn_shoucang image{
  position:absolute;
  width:40rpx;
  height:40rpx;
  top:15rpx;
  left:20rpx;
}
.project_list{
  position:relative;
}
.project_item{
  height:50rpx;
  line-height:50rpx;
  position:relative;
}
.project_item_title{
  width:120rpx;
  position:absolute;
  left:0;
  top:0;
  height:50rpx;
  line-height:50rpx;
  font-size:24rpx;
  color:#7e7b7f;
  text-align: left;
}
.project_item_progress{
  position:absolute;
  left:120rpx;
  right:180rpx;
  width:auto;
  height:10rpx;
  padding:20rpx 0;
}
.project_item_progress .progress_item{
  width:18%;
  height:10rpx;
  background:#f2f2f2;
  float:left;
  margin-right:2%;
}
.project_item_tip{
  width:180rpx;
  position:absolute;
  right:0;
  top:0;
  height:50rpx;
  line-height:50rpx;
  font-size:24rpx;
  color:#ccc;
  text-align: right;
}

.message_list{
  position:relative;
}
.message_list>view:first-child{
  border-top:none;
}
.message_item{
  position:relative;
  padding:20rpx 20rpx 20rpx 120rpx;
  min-height:100rpx;
  border-top:1px solid #f2f2f2;
}
.message_item .message_btn_sound{
  position:absolute;
  width:100rpx;
  height:100rpx;
  left:0;
  top:20rpx;
}
.message_item .message_btn_sound image{
  position:absolute;
  width:100rpx;
  height:100rpx;
  left:0;
  top:0;
}
.message_title,.message_info{
  line-height:40rpx;
  font-size:24rpx;
  color:#7e7b7f;

}
.message_date{
  line-height:50rpx;
  font-size:24rpx;
  color:#ccc;
}