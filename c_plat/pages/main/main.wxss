view{
  font-family:'Microsoft YaHei';
}
.lunbo{
    height:380rpx;
    overflow:hidden;
    background: #74bee3;
}
.lunbo swiper{
    height:460rpx;
}
.cir_bg{
  width: 120rpx; 
  height: 120rpx; 
  border-radius:120rpx;
  background:#000;
  opacity: 0.1;
  transform:rotateX(70deg);
  position:absolute;
  bottom:-40rpx;
  left:50%;
  margin-left:-60rpx;
  z-index:1;
}
.status_box{
  position:relative;
  width:200rpx;
  height:200rpx;
  margin:0 auto;
  margin-top:40rpx;
  border-radius: 200rpx;
  overflow: visible;
  border:15rpx solid #f2f2f2;
}
.status_box image{
  position:relative;
  width:200rpx;
  height:200rpx;
  z-index:100;
}
.healthy_title{
  padding-top:20rpx;
  text-align: center;
  color:#fff;
  font-size:26rpx;
  height:30rpx;
  line-height:30rpx;
}

.healthy_tip{
  color:#fff;
  font-size:24rpx;
  text-align: center;
}
.container{
  background:#f7f7f7;
}
.panel-tab{
  background:#fff;
  margin-top:20rpx;
}
.view-item{
  padding-left:20rpx;
}
.view-item .btn_shoucang{
  position:absolute;
  left:0;
  top:0;
  width:80rpx;
  height:80rpx;
}
.view-item .btn_shoucang image{
  position:absolute;
  width:40rpx;
  height:40rpx;
  top:15rpx;
  left:20rpx;
}
.project_list{
  position:relative;
}
.project_item{
  height:50rpx;
  line-height:50rpx;
  position:relative;
}
.project_item_title{
  width:120rpx;
  position:absolute;
  left:0;
  top:0;
  height:50rpx;
  line-height:50rpx;
  font-size:26rpx;
  color:#7e7b7f;
  text-align: left;
}
.project_item_progress{
  position:absolute;
  left:120rpx;
  right:180rpx;
  width:auto;
  height:10rpx;
  padding:20rpx 0;
}
.project_item_progress .progress_item{
  width:18%;
  height:10rpx;
  background:#f2f2f2;
  float:left;
  margin-right:2%;
  position:relative;
}
.progress_item_count{
  position:absolute;
  left:0;
  top:0;
  bottom:0;
  width:0;
  height:auto;
  background:#74bee3;
}
.project_item_tip{
  width:180rpx;
  position:absolute;
  right:0;
  top:0;
  height:50rpx;
  line-height:50rpx;
  font-size:26rpx;
  color:#ccc;
  text-align: right;
}

.message_list{
  position:relative;
}
.message_list>view:first-child{
  border-top:none;
}
.message_item{
  position:relative;
  padding:20rpx 20rpx 20rpx 120rpx;
  min-height:100rpx;
  border-top:1px solid #f2f2f2;
}
.message_item .message_btn_sound{
  position:absolute;
  width:100rpx;
  height:100rpx;
  left:0;
  top:20rpx;
}
.message_item .message_btn_sound image{
  position:absolute;
  width:100rpx;
  height:100rpx;
  left:0;
  top:0;
}
.message_title,.message_info{
  line-height:40rpx;
  font-size:26rpx;
  color:#7e7b7f;

}
.message_date{
  line-height:50rpx;
  font-size:26rpx;
  color:#ccc;
}
.menu_list{
  height:200rpx;
  background: #fff;
  border-top:1rpx solid #f2f2f2;
  border-bottom:1rpx solid #f2f2f2;
}
.menu_item{
  width:33.33%;
  height:90rpx;
  float:left;
  position:relative;
  padding-top:110rpx;
  line-height: 60rpx;
  font-size:28rpx;
  text-align: center;
  color:#808080;
}
.menu_photo{
  position:absolute;
  top:40rpx;
  width:60rpx;
  height:60rpx;
  left:50%;
  margin-left:-30rpx;
  border-radius: 60rpx;
}
.menu_photo image{
  width:60rpx;
  height:60rpx;
}
.tip{
  position:absolute;
  right:8rpx;
  top:10rpx;
  width:20rpx;
  height:20rpx;
  border-radius: 20rpx;
  margin-right:-10rpx;
  margin-top:-10rpx;
  background:#f38997;
}