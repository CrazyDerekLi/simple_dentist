/* pages/fujin/fujin.wxss */
view,input{
  font-family:'Microsoft YaHei';
  color:#666;
}

.container{
  background:#f5f5f9;
}
.hospital_item{
  border-bottom: 1rpx solid #f2f2f2;
  clear:both;
  padding:20rpx 0;
  color:#ccc;
  position:relative;
  padding-left:200rpx;
  background:#fff;
}
.hospital_info{
  font-size:24rpx;
}
.hospital_info .name{
  font-size:30rpx;
  line-height: 60rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  color:#999;
}
.hospital_item .image{
  height:160rpx;
  width:160rpx;
  position:absolute;
  left:20rpx;
  top:20px;
  /*border:1px solid #f2f2f2;*/
  background: #fff;
}
.hospital_item .image image{
  width:160rpx;
  height:160rpx;
}
.star{
  color:#ccc;
  position:relative;
  line-height:50rpx;
}
.star>image{
  float:left;
  margin-top:5rpx;
  margin-right:5rpx;
  width:30rpx;
  height:30rpx;
}
.star .yuyue{
  padding-left:10rpx;
  float:left;
  color:#ccc;
}
.juli{
  font-size:24rpx;
  line-height:50rpx;
  color:#ccc;
  position:absolute;
  top:0;
  right:20rpx;
  font-weight:normal;
  letter-spacing: 0;
}
.doctor_list .juli{
  line-height:70rpx;
  padding-top:20rpx;
}
.ka,.quan{
  position:relative;
  height:46rpx;
  clear:both;
  padding-left:55rpx;
  line-height:46rpx;
  color:#ccc;
}
.ka>image,.quan>image{
  width:30rpx;
  height:30rpx;
  position:absolute;
  left:8rpx;
  top:8rpx;
}
.show_list{
  display:none;
  margin-top:20rpx;
  border-top:1rpx solid #f2f2f2;
}
.show_list.selected{
  display:block;
}
.doctor_list{
  margin-top:20rpx;
  border-top:1rpx solid #f2f2f2;
}
.doctor_item{
  height:190rpx;
  padding:10rpx 140rpx 10rpx 180rpx;
  background:#fff;
  position:relative;
  border-bottom:1rpx solid #f2f2f2;
}
.doctor_photo{
  position:absolute;
  width:130rpx;
  height:130rpx;
  background:#ccc;
  left:25rpx;
  top:40rpx;
  border-radius: 130rpx;
  overflow: hidden;
}
.doctor_photo image{

  position:absolute;
  width:130rpx;
  height:130rpx;
  left:0;
  top:0;
}
.doctor_name{
  font-size:32rpx;
  font-weight:bold;
  height:70rpx;
  line-height:70rpx;
  padding-top:10rpx;
  color:#666;
}
.type_zhuan{
  display: inline-block;
  margin-left:10rpx;
  width:40rpx;
  height:40rpx;
  font-size:30rpx;
  line-height:40rpx;
  background:#32ccfe;
  color:#fff;
  text-align: center;
}
.type_zhuan,.type_fufei,.type_smfw{
  display: inline-block;
  margin-left:10rpx;
  height:32rpx;
  font-size:24rpx;
  font-weight:normal;
  line-height:32rpx;
  color:#fff;
  text-align: center;
}
.type_zhuan{
  background:#32ccfe;
  width:32rpx;
}
.type_fufei{
  background:#ff6666;
  padding:0 6rpx;
  border-radius: 6rpx;
}
.type_smfw{
  background:#ffcc66;
  padding:0 6rpx;
  border-radius: 6rpx;
}
.star .yuyue{
  font-size:28rpx;
  margin-top:-2rpx;
}
.doctor_info{
  clear:both;
  height:40rpx;
  font-size:28rpx;
  color:#ccc;
  line-height:40rpx;
}

.nearby_top{
  background:#74bee3;
  padding-top:20rpx;
  border-top:1rpx solid #9ed2ea;
}
.nearby_img{
  width:300rpx;
  height:300rpx;
  margin:0 auto 20rpx auto;
}
.nearby_img image{
  width:300rpx;
  height:300rpx;
}
.nearby_btns{
  height:100rpx;
  border-top:1rpx solid #f2f2f2;
  border-bottom:1rpx solid #f2f2f2;
}
.nearby_btns>view{
  width:50%;
  height:100rpx;
  line-height: 100rpx;
  float:left;
  text-align:center;
  background:#fff;
  font-size:32rpx;
  color:#7e7b7f;
}
.nearby_right_btn{
  margin-left:-1rpx;
  border-left:1rpx solid #f2f2f2;
}
.nearby_btns>view.selected{
  color:#74bee3;
}