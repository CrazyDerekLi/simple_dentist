.container{
  background: #f5f5f9;
}
.zhangdan_top{
  background:#f7f7f7;
  position:relative;
  height:100rpx;
  border-top:1rpx solid #f2f2f2;
  border-bottom: 1rpx solid #f2f2f2;
}
.zhangdan_btn{
  border-left:1rpx solid #f2f2f2;
  border-right:1rpx solid #f2f2f2;
  width:25%;
  float:left;
  height:100rpx;
  margin-right:-1rpx;
  margin-left:-1rpx;
  line-height:100rpx;
  text-align: center;
  font-size:32rpx;
  color:#9fa0a0;
}
.zhangdan_btn.selected{
  color:#74bee3;
}
.zhangdan_list{
  background:#fff;
  display: none;
}
.zhangdan_list.selected{
  display: block;
}
.zhangdan_item{
  height:100rpx;
  padding:25rpx 0;
  border-bottom:1rpx solid #f2f2f2;
}
.zhangdan_item_left{
  float:left;
  height:100rpx;
}
.zhangdan_item_right{
  float:right;
  height:100rpx;
}
.title1{
  height:50rpx;
  line-height:50rpx;
  padding:0 40rpx;
  font-size:32rpx;
  color:#7e7b7f;
}
.titleInfo{
  height:100rpx;
  line-height:100rpx;
  padding:0 40rpx;
  font-size:32rpx;
  color:#7e7b7f;
}
.title2{
  height:50rpx;
  line-height:50rpx;
  padding:0 40rpx;
  font-size:28rpx;
  color:#b5b5b6;
}