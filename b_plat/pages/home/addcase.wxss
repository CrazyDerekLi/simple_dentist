.container{
  background:#f8f8f8;
  z-index: 100;
}
.mouth_top{
  background: #74bee3;
  padding:40rpx 0;
  position:relative;
}
.mouth_top .mouth_status_box image.mouth_bg{
  width:300rpx;
  height:300rpx;
  margin:0 auto;
  display: block;
}
.mouth_edit_btn{
  display: none;
  width:200rpx;
  height:70rpx;
  position:absolute;
  top:155rpx;
  line-height: 70rpx;
  background: #fff;
  border-radius: 70rpx;
  left:50%;
  margin-left:-100rpx;
  text-align: center;
  font-size:30rpx;
  color:#7e7c81;
}
.mouth_top.edit  .mouth_status_box{
  opacity: 0.5;
}
.mouth_top.edit .mouth_edit_btn{
  display: block;
}
.mouth_list{
  border-bottom:1rpx solid #efefef;
  height:110rpx;
  border-top:1rpx solid #efefef;
  background:#fff;
  margin-bottom:20rpx;
}
.mouth_item{
  position:relative;
  width:12%;
  height:110rpx;
  float:left;
  font-size:24rpx;
  line-height: 40rpx;
  text-align: center;
  color:#b5b5b5;
}
.mouth_item image{
  position:relative;
  width:40rpx;
  height:40rpx;
  display: block;
  margin:20rpx auto 0 auto;
}
.right,.left{
  width:8%;
}
.mouth_detail_list{
  margin-bottom:20rpx;
  background:#fff;
  border-top:1rpx solid #efefef;
}
.mouth_detail_item{
  border-bottom:1rpx solid #efefef;
  height:80rpx;
  line-height:80rpx;
  padding:0 40rpx;
  position:relative;
}
.mouth_detail_info{
  padding:30rpx 40rpx;
  line-height:40rpx;
  font-size:28rpx;
  color:#7e7b7f;
  min-height:40rpx;
  border-bottom:1rpx solid #efefef;
  word-break:break-all;
}
.mouth_detail_item_left{
  font-size:28rpx;
  color:#9e9b9f;
  float:left;
}
.mouth_detail_item_right{
  font-size:28rpx;
  color:#ccc;
  float:right;
  position:relative;
}
.mouth_detail_item_right image.enter{
  width:12rpx;
  height:24rpx;
  position:absolute;
  right:0;
  top:28rpx;
}
.doctor_photo{
  width:60rpx;
  height:60rpx;
  float:right;
  position:relative;
  margin-top:10rpx;
  margin-right:10rpx;
}
.doctor_photo image{
  position:absolute;
  width:60rpx;
  height:60rpx;
  left:0;
  top:0;
}

.mouth_detail_btn{
  height:100rpx;
  line-height:100rpx;
  color:#fff;
  background:#77daa1;
  text-align: center;
  border-bottom:1rpx solid #efefef;
  font-size:32rpx;
}
.mouth_info_list{
  margin-bottom:20rpx;
  background:#fff;
  border-top:1rpx solid #efefef;
}
.mouth_user,.mouth_date{
  border-bottom:1rpx solid #efefef;
  height:80rpx;
  line-height:80rpx;
  padding:0 40rpx;
  position:relative;
}
.mouth_info_label{
  position:absolute;
  left:0;
  top:0;
  width:120rpx;
  font-size:30rpx;
  padding-left:40rpx;
  color:#ccc;
  line-height: 80rpx;
}
.mouth_info_body{
  position:relative;
  padding-left:130rpx;
  font-size:30rpx;
  color:#7d7b7e;
  line-height: 80rpx;
}
.edit_box{
  position:fixed;
  bottom:0;
  left:0;
  right:0;
  height:300rpx;
  background:#fff;
  z-index: 101;
  box-shadow: 0 0 100rpx #ccc;
}
.edit_box textarea{
  position:absolute;
  left:0;
  right:0;
  bottom:80rpx;
  top:0;
  height:auto;
  width:auto;
  padding:30rpx;
  line-height:40rpx;
  font-size:28rpx;
}
.edit_back_btn{
  position:absolute;
  left:0;
  right:0;
  bottom:0;
  border:1rpx solid #f2f2f2;
  height:80rpx;
  text-align:center;
  font-size:30rpx;
  background:#77daa1;
  color:#fff;
  line-height: 80rpx;
}
.edit_box input{
  height:220rpx;
  line-height: 220rpx;
  font-size:60rpx;
  padding:0 40rpx;
}
.date_picker{
  position:fixed;
  background:#f8f8f8;
  bottom:0;
  border-top:1rpx solid #f2f2f2;
  z-index: 102;
  width: 100%; 
  height: 300px;
}
.date_picker_container{
  background:#f8f8f8;
  width: 100%; 
  height: 250px;
  position:absolute;
  bottom:80rpx;
}
.date_picker_item{
  line-height: 50px;
  color:#666;
  text-align: center;
  font-size:32rpx;
  position:relative;
  z-index: 102;
}
.btn_cancel{
  position:absolute;
  left:0;
  bottom:0;
  width:100%;
  height:80rpx;
  line-height: 80rpx;
  font-size:28rpx;
  background:#77daa1;
  color:#fff;
  z-index:1000;
  text-align: center;
}