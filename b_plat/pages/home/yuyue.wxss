.container{
  background:#f8f8f8;
}
.yuyue_date{
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size:28rpx;
}
.sanjiao_left{
  display: inline-block;
  width: 0;
  height: 0;
  border-top: 12rpx solid transparent;
  border-right: 24rpx solid #7d7b80;
  border-bottom: 12rpx solid transparent;
  margin-right:20rpx;
}
.sanjiao_right{
  display: inline-block;
  width: 0;
  height: 0;
  border-top: 12rpx solid transparent;
  border-left: 24rpx solid #7d7b80;
  border-bottom: 12rpx solid transparent;
  margin-left:20rpx;
}
.yuyue_list{
  border-top:1rpx solid #f2f2f2;
  background: #fff;
  margin-bottom: 20rpx;
}
.yuyue_item{
  padding:50rpx 30rpx 0 150rpx;
  position:relative;
  border-bottom:1rpx solid #f2f2f2;
  min-height: 100rpx;
  font-size:32rpx;
  color:#7e7c7f;
}
.yuyue_item_title{
  position:absolute;
  height:40rpx;
  line-height: 40rpx;
  width:100rpx;
  top:50%;
  margin-top:-20rpx;
  left:30rpx;
  text-align: center;
}
.yuyue_item_user{
  width:100rpx;
  height:130rpx;
  float:left;
  margin-right:40rpx;
  margin-bottom:30rpx;
  line-height: 50rpx;
  font-size:28rpx;
  text-align: center;
}
.yuyue_item_user_photo{
  width:80rpx;
  height:80rpx;
  border-radius: 80rpx;
  margin:0 auto;
}
.yuyue_item_user_photo image{
  width:80rpx;
  height:80rpx;
}
.clear{
  clear:both;
}
.yuyue_add{
  margin-bottom:20rpx;
  height:180rpx;
  background: #fff;
  border-top:1rpx solid #f2f2f2;
  border-bottom:1rpx solid #f2f2f2;
}
.yuyue_add_btn{
  width:100rpx;
  height:100rpx;
  margin:0 auto;
  position:relative;
}
.yuyue_add_btn image{
  width:40rpx;
  height:40rpx;
  position:absolute;
  top:50rpx;
  left:30rpx;
}
.yuyue_add_info{
  text-align: center;
  height:60rpx;
  line-height:60rpx;
  font-size:32rpx;
  color:#7f7a80;
}
.date_picker{
  position:fixed;
  background:#f8f8f8;
  bottom:0;
  border-top:1rpx solid #f2f2f2;
  z-index: 100;
  width: 100%; 
  height: 300px;
}
.date_picker_container{
  background:#f8f8f8;
  width: 100%; 
  top:0;
  height:auto;
  position:absolute;
  bottom:100rpx;
}
.date_picker_item{
  line-height: 50px;
  color:#666;
  text-align: center;
  font-size:32rpx;
  position:relative;
  z-index: 100;
}
.btn_cancel{
  width:100%;
  line-height:100rpx;
  height:100rpx;
  position:absolute;
  bottom:0;
  background:#77daa1;
  color:#fff;
  z-index:1000;
  text-align: center;
}