.container{
  background:#74bee3;
}
.bg{
  position:absolute;
  bottom:0;
  right:0;
  left:0;
  height:100%;
  z-index: 20;
}
.bg image{
  position:absolute;
  bottom:0;
  width:100%;
  height:70%;
}
.logo{
    position:relative;
    width:400rpx;
    height:400rpx;
    margin:100rpx auto 30rpx auto;
    z-index: 24;
}
.logo image{
  position:absolute;
  left:0;
  top:0;
  right:0;
  bottom:0;
  height:auto;
  width:auto;
}
.login_password{
  position:relative;
  width:60%;
  height:160rpx;
  padding:0 20rpx;
  margin:20rpx auto;
  z-index: 23;
}
.login_password input{
  height:80rpx;
  display: block;
  background: #fff;
  font-size:28rpx;
  padding:0 20rpx;
  color:#7d7b7e;
}
.login_btn{
  position:relative;
  height:80rpx;
  background:#77daa1;
  color:#fff;
  text-align: center;
  font-size:30rpx;
  margin:20rpx 0;
  line-height: 80rpx;
}